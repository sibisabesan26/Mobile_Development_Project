<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".MainActivity">

    <!-- ✅ Main content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ✅ Service Alerts Container -->
        <LinearLayout
            android:id="@+id/alertContainer"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ✅ Welcome Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/welcomeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/alertContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/welcomeText"
                android:text="Welcome to SmartNeighborhood!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- ✅ Feature Buttons -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/welcomeCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGarbageCollection"
                android:text="Garbage Collection Zones"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUtilityTracking"
                android:text="Utility Tracking"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLocalServiceAlerts"
                android:text="Local Service Alerts"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFeedback"
                android:text="Give Feedback"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFaq"
                android:text="FAQ"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- ✅ News Slider -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newsSlider"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="5dp"
            android:paddingEnd="8dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/buttonContainer"
            app:layout_constraintBottom_toTopOf="@id/imgFadedLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_news_card"/>

        <!-- ✅ Faded Logo Watermark -->
        <ImageView
            android:id="@+id/imgFadedLogo"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/app_logo"
            android:alpha="0.1"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@id/customFooter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ✅ Custom Footer Bar -->
        <LinearLayout
            android:id="@+id/customFooter"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:background="@color/primaryColor"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_profile"
                android:tint="@android:color/white"
                android:contentDescription="Profile"/>

            <Space
                android:layout_width="48dp"
                android:layout_height="1dp" />

            <ImageButton
                android:id="@+id/btnFaqIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_faq"
                android:tint="@android:color/white"
                android:contentDescription="FAQ"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
